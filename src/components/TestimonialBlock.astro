---
import type { Testimonial } from '@lib/content';

interface Props extends Testimonial {}

const { quote, name, role } = Astro.props;
---
<blockquote class="glass-panel flex h-full flex-col gap-3 rounded-2xl p-6">
  <p class="text-base leading-relaxed text-cocoa dark:text-cream">“{quote}”</p>
  <div class="mt-auto text-sm font-semibold text-caramel">
    {name}
    <span class="block text-xs font-medium text-cocoa/70 dark:text-cream/70">{role}</span>
  </div>
</blockquote>
