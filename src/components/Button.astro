---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'md' | 'lg';
  className?: string;
  ariaLabel?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  className = '',
  ariaLabel,
} = Astro.props;

const sizes: Record<NonNullable<Props['size']>, string> = {
  md: 'px-5 py-3 text-sm',
  lg: 'px-6 py-3.5 text-base',
};

const variants: Record<NonNullable<Props['variant']>, string> = {
  primary:
    'bg-gradient-to-r from-caramel via-forest to-tawny text-cocoa shadow-card hover:shadow-lg hover:-translate-y-0.5 dark:text-cocoa',
  secondary:
    'bg-white/90 text-cocoa border border-forest/35 shadow-sm hover:border-caramel/60 hover:shadow-md dark:bg-cocoa/70 dark:text-cream dark:border-forest/40 dark:hover:border-caramel/60',
  ghost:
    'bg-transparent text-caramel dark:text-blush hover:bg-caramel/10 dark:hover:bg-white/10 border border-transparent hover:border-caramel/40 dark:hover:border-forest/50',
};

const baseClasses = 'inline-flex items-center justify-center gap-2 rounded-pill font-semibold transition-all duration-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-caramel';
const resolvedClasses = `${baseClasses} ${sizes[size]} ${variants[variant]} ${className}`.trim();
---
{href ? (
  <a class={resolvedClasses} href={href} aria-label={ariaLabel}>
    <slot />
  </a>
) : (
  <button class={resolvedClasses} type="button" aria-label={ariaLabel}>
    <slot />
  </button>
)}
